{
  "name": "pay-directdebit-frontend",
  "description": "Payments Direct Debit frontend application",
  "version": "0.0.1-SNAPSHOT",
  "private": true,
  "license": "MIT",
  "engines": {
    "node": ">8.12.0"
  },
  "standard": {
    "globals": [
      "describe",
      "context",
      "before",
      "beforeEach",
      "after",
      "afterEach",
      "it",
      "expect"
    ],
    "ignore": [
      "common/assets/**/*.js",
      "node_modules/**/*.*"
    ]
  },
  "scripts": {
    "compile": "grunt generate-assets",
    "clean": "grunt clean",
    "start": "node ./start.js",
    "watch": "./node_modules/.bin/grunt watch",
    "lint": "./node_modules/.bin/standard --fix",
    "lint-sass": "./node_modules/.bin/sass-lint -v",
    "test": "./node_modules/mocha/bin/mocha '!(node_modules)/**/*+(.test|.tests)'.js",
    "snyk-protect": "snyk protect",
    "prepublish": "npm run snyk-protect"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "npm run lint",
      "git add"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      "*.tests.js",
      "Gruntfile.js",
      "common/browsered/*",
      "public/js/*"
    ]
  },
  "dependencies": {
    "@govuk-pay/pay-js-commons": "2.16.0",
    "@sentry/node": "5.7.1",
    "appmetrics": "5.0.5",
    "appmetrics-statsd": "3.0.0",
    "body-parser": "1.19.x",
    "client-sessions": "0.8.x",
    "compression": "1.7.x",
    "correlation-id": "^3.1.1",
    "csrf": "3.1.x",
    "express": "4.17.x",
    "govuk-frontend": "^3.3.0",
    "i18n": "0.8.x",
    "lodash": "^4.17.15",
    "memory-cache": "^0.2.0",
    "minimist": "1.2.x",
    "morgan": "1.9.x",
    "nunjucks": "^3.2.0",
    "pino": "5.13.x",
    "readdir": "0.1.x",
    "request": "^2.88.0",
    "requestretry": "^4.0.2",
    "rfc822-validate": "^1.0.0",
    "serve-favicon": "2.5.0",
    "staticify": "3.3.x",
    "throng": "4.0.x",
    "url-join": "^4.0.1",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@babel/core": "^7.5.4",
    "@babel/preset-env": "^7.5.4",
    "chai": "^4.2.0",
    "cheerio": "^1.0.0-rc.3",
    "chokidar-cli": "latest",
    "envfile": "^3.0.0",
    "eslint": "^5.16.0",
    "gaap-analytics": "^3.0.0",
    "grunt": "^1.0.4",
    "grunt-babel": "^8.0.0",
    "grunt-browserify": "^5.0.0",
    "grunt-cli": "1.3.x",
    "grunt-contrib-clean": "2.0.x",
    "grunt-contrib-compress": "^1.5.0",
    "grunt-contrib-copy": "1.0.x",
    "grunt-contrib-uglify": "^4.0.1",
    "grunt-contrib-watch": "^1.1.0",
    "grunt-env": "0.4.x",
    "grunt-mocha-test": "^0.13.2",
    "grunt-sass": "3.0.x",
    "husky": "^3.0.0",
    "jquery": "^3.4.1",
    "lint-staged": "^9.2.0",
    "mocha": "6.1.x",
    "nock": "^10.0.6",
    "node-sass": "^4.12.0",
    "nodemon": "^1.19.1",
    "nunjucksify": "^2.2.0",
    "proxyquire": "^2.1.1",
    "sass-lint": "^1.13.1",
    "sinon": "^7.3.2",
    "snyk": "^1.193.2",
    "standard": "^13.0.2",
    "supertest": "^4.0.2"
  },
  "snyk": true
}
